<div class="container margenes">
    <div class="row m-3">
        <div class="col">
            <h2>Modificar la novedad</h2>

            <form action="/admin/novedades/modificar" method="post">
                <input type="hidden" value="{{novedad.id}}" name="id">
                <div class="mb-3">
                    <label class="form-label">Titulo</label>
                    <input type="text" class="form-control" name="titulo" value="{{novedad.titulo}}">
                </div>
                <div class="mb-3">
                    <label class="form-label">Subtitulo</label>
                    <textarea class="form-control" rows="3" name="subtitulo">{{novedad.subtitulo}}</textarea>
                </div>
                <div class="mb-3">
                    <label class="form-label">Cuerpo</label>
                    <textarea class="form-control" rows="3" name="cuerpo">{{novedad.cuerpo}}</textarea>
                </div>
                <div class="col-auto">
                    <button type="submit" class="btn btn-success mb-3">Modificar</button>
                </div>
            </form>
            {{#if error}}
                <p>{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>